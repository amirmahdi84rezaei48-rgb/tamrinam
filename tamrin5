

using System;

class Program
{
    static void Main()
    {

        Console.WriteLine("=== قسمت ۱: مساحت و محیط مثلث ===");
        Console.Write("طول قاعده رو وارد کن: ");
        double ghaede = Convert.ToDouble(Console.ReadLine());

        Console.Write("ارتفاع رو وارد کن: ");
        double ertefa = Convert.ToDouble(Console.ReadLine());

        Console.Write("طول ضلع سوم رو وارد کن: ");
        double zel3 = Convert.ToDouble(Console.ReadLine());

        double masahat = 0.5 * ghaede * ertefa;

        (فرض: دو ضلع دیگر هم داریم، ولی فقط سه تا کافیه)
        double mohit = ghaede + ertefa + zel3;

        Console.WriteLine($"مساحت مثلث = {masahat}");
        Console.WriteLine($"محیط مثلث = {masahat}");
        

        Console.WriteLine("\n=== قسمت ۲: فاکتوریل با تابع بازگشتی ===");
        Console.Write("یه عدد وارد کن تا فاکتوریلش رو حساب کنم: ");
        int n = Convert.ToInt32(Console.ReadLine());

        if (n < 0)
        {
            Console.WriteLine("عدد منفی نمیشه! فاکتوریل نداره.");
        }
        else
        {
            long fakt = Factoriel(n);  // فراخوانی تابع
            Console.WriteLine($"فاکتوریل {n} = {fakt}");
        }

        Console.WriteLine("\nدکمه‌ای بزن تا خارج شی...");
        Console.ReadKey();
    }

    static long Factoriel(int x)
    {
        if (x == 0 || x == 1)
            return 1;
        else
            return x * Factoriel(x - 1);
    }
}