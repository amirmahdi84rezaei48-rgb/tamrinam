soail 1

using System;
namespace Tamrin1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("شعاع دایره را وارد کنید: ");
            double r = Convert.ToDouble(Console.ReadLine());
            double mohit = 2 * Math.PI * r;
            double masahat = Math.PI * r * r;
            Console.WriteLine("محیط دایره: " + mohit);
            Console.WriteLine("مساحت دایره: " + masahat);

            Console.ReadKey();
        }
    }
}  




soail2



using System;

namespace Tamrin2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("دما بر حسب سانتی گراد را وارد کنید: ");
            double c = Convert.ToDouble(Console.ReadLine());
            double f = (c * 9 / 5) + 32;
            Console.WriteLine("دما بر حسب فارنهایت: " + f);
            Console.ReadKey();
        }
    }
}